# ==== APProVe Images ====
CONFIG_IMAGE=registry.gitlab.ibdf-frankfurt.de/uct/open-approve/uct-config-service:1.6.0
EUREKA_IMAGE=registry.gitlab.ibdf-frankfurt.de/uct/open-approve/uct-eureka-service:1.8.0
BACKEND_IMAGE=registry.gitlab.ibdf-frankfurt.de/uct/open-approve/uct-backend-service:3.2.1
FRONTEND_IMAGE=registry.gitlab.ibdf-frankfurt.de/uct/open-approve/uct-frontend-service:3.2.1
USER_IMAGE=registry.gitlab.ibdf-frankfurt.de/uct/open-approve/uct-user-service:1.6.0
COMMENT_IMAGE=registry.gitlab.ibdf-frankfurt.de/uct/open-approve/uct-comment-service:1.0.0
EMAIL_IMAGE=registry.gitlab.ibdf-frankfurt.de/uct/open-approve/uct-email-service:1.3.0
AUTOMATIOM_IMAGE=registry.gitlab.ibdf-frankfurt.de/uct/open-approve/uct-automation-service:1.2.0
MANUAL_IMAGE=registry.gitlab.ibdf-frankfurt.de/uct/open-approve/uct-manual-service-v2:latest
