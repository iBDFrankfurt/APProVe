MONGO_IMAGE=mongo:3.6
POSTGRES_IMAGE=postgres:12.7
# ==== APProVe Images ====
CONFIG_IMAGE=registry.gitlab.proskive.de/uct/open-approve/uct-config-service:1.6.0
EUREKA_IMAGE=registry.gitlab.proskive.de/uct/open-approve/uct-eureka-service:1.8.0
BACKEND_IMAGE=registry.gitlab.proskive.de/uct/open-approve/uct-backend-service:3.0.1
FRONTEND_IMAGE=registry.gitlab.proskive.de/uct/open-approve/uct-frontend-service:3.0.2
USER_IMAGE=registry.gitlab.proskive.de/uct/open-approve/uct-user-service:1.5.0
COMMENT_IMAGE=registry.gitlab.proskive.de/uct/open-approve/uct-comment-service:1.0.0
EMAIL_IMAGE=registry.gitlab.proskive.de/uct/open-approve/uct-email-service:1.2.0
AUTOMATIOM_IMAGE=registry.gitlab.proskive.de/uct/open-approve/uct-automation-service:1.1.0
MANUAL_IMAGE=registry.gitlab.proskive.de/uct/open-approve/uct-manual-service-v2:latest
GATEWAY_IMAGE=registry.gitlab.proskive.de/uct/open-approve/uct-gateway-service:1.0.0
# Still being worked on. Early Alpha
DRAFT_IMAGE=registry.gitlab.proskive.de/uct/open-approve/uct-draft-service:0.4.0
