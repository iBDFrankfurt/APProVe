AUTOMATIOM_IMAGE=registry.gitlab.proskive.de/uct/open-approve/uct-automation-service:1.0.0
GATEWAY_IMAGE=registry.gitlab.proskive.de/uct/open-approve/uct-gateway-service:1.0.0
MANUAL_IMAGE=registry.gitlab.proskive.de/uct/open-approve/uct-manual-service:latest

#---------------------------------------------------------------------------------------------------------
# ==== Postgres Variables ====
APPROVE_POSTGRES_USER=user
APPROVE_POSTGRES_PASSWORD=pa$$w0rd
# Create default database for keycloak
APPROVE_AUTH_DB=keycloak_db
APPROVE_PROJECT_DB=approve_db
#---------------------------------------------------------------------------------------------------------
# ==== Mongo Variables ====
APPROVE_MONGO_USER=user
APPROVE_MONGO_PASSWORD=pa$$w0rd
MONGO_URL=mongodb://approve.mongo

#---------------------------------------------------------------------------------------------------------
# ==== Keycloak Variables ====
# Keycloak works with realms, please create a realm before trying to connect with approve
KEYCLOAK_REALM_NAME=local
# Admin user is needed to connect to keycloak after starting
APPROVE_KEYCLOAK_ADMIN_USER=admin
APPROVE_KEYCLOAK_ADMIN_PASSWORD=admin
APPROVE_KEYCLOAK_URL=http://192.168.0.91:8080/auth
# The following is the client id of the frontend-service client in keycloak
APPROVE_CLIENT_ID=APProVe-Web

#---------------------------------------------------------------------------------------------------------
# ==== Frontend URL ====
# Some references, like mail or manual will redirect to the frontend. In order for those links to work, provide the url
APPROVE_FRONTEND_URL=http://192.168.0.91:8001

#---------------------------------------------------------------------------------------------------------
# ==== URL's ====
APPROVE_BACKEND_URL=http://192.168.0.91:8000
APPROVE_AUTOMATION_URL=http://192.168.0.91:3233
APPROVE_USER_URL=http://192.168.0.91:9001
APPROVE_COMMENTS_URL=http://192.168.0.91:3234
APPROVE_MANUAL_URL=http://192.168.0.91:8585
APPROVE_MAIL_URL=http://192.168.0.91:4234

#---------------------------------------------------------------------------------------------------------
# ==== Eureka Variables ====
EUREKA_URL=http://approve.eureka:8761/eureka

#---------------------------------------------------------------------------------------------------------
# ==== User-Service Variables ====
# !this user needs to be created in keycloak!
# The User service is connecting to keycloak. you can create a service to call but we chose a user. this user needs special permissions. please see the guide
KEYCLOAK_USER_NAME=service-user
KEYCLOAK_USER_PASSWORD=service-user-pass
# The following is the client id of the rest service the service user can connect to
KEYCLOAK_REST_CLIENT_ID=rest-client

#---------------------------------------------------------------------------------------------------------
# ==== ProSkive Ports ====
AUTH_PORT=8443
MONGO_PORT=27017
POSTGRES_PORT=5432
CONFIG_PORT=8888
BACKEND_PORT=8000
FRONTEND_PORT=8001
USER_PORT=9001
EUREKA_PORT=8761
COMMENT_PORT=3234
EMAIL_PORT=4234
AUTOMATION_PORT=3233
GATEWAY_PORT=8762
MANUAL_PORT=8585
